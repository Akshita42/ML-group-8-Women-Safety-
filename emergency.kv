#:kivy 2.1.0

<EmergencyContactScreen>:
    name: 'emergency'

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Emergency Contacts"
            color: 0.5, 0, 0.2, 1
            font_size: 22
            size_hint_y: None
            height: 40

        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: 50

            TextInput:
                id: name_input
                hint_text: "Name"
                multiline: False
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

            TextInput:
                id: phone_input
                hint_text: "Phone"
                multiline: False
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

        Button:
            text: "Add Contact"
            size_hint_y: None
            height: 50
            background_color: 0.5, 0, 0.2, 1
            on_press: root.add_contact()

        ScrollView:
            GridLayout:
                id: contacts_container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10
                padding: [0, 10]

        Button:
            text: "Continue"
            size_hint_y: None
            height: 50
            background_color: 0.5, 0, 0.2, 1
            on_press: root.save_contacts()
